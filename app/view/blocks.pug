extends layout

block content
  div(class='container mt-3')
    form(id='search')
      div(class='field')
        div(class='control has-icons-left is-expanded')
          input(class='input is-medium search' type='text' name='q' placeholder='Filter')
          span(class='icon is-medium is-left')
            i(class='fas fa-search')

  article(class='blocks')
    h1(class='is-size-1 mt-4') Blocks

    div(class='summary')
      p Blockchain Height:
        span(id='heightBlockchain' class='height')

    table(class='blocks table is-fullwidth')
      thead
        tr
          th(class='marker')
          th Block
          th Date/Time (UTC)
      tbody

